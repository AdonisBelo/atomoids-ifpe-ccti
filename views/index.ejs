
<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="utf-8">
        <title>Atomoids_Index</title>
        <script src="javascripts/pouchdb-6.2.0.min.js"></script>
        <link rel="stylesheet" href="stylesheets/style.css">
    </head>
    <body>

      <script type="text/javascript">
          window.onkeydown = keyPressed;
          function keyPressed(event){
          	  switch(event.keyCode){
      	         case 32:
                    window.location.replace("/game");
  	             break;
  	           }
  	      }

          var db = new PouchDB('atomoids_ranking');

          function showRanking(){
              var scores = null;
              db.allDocs({include_docs: true, descending: true}).then(function(docs){
                scores = docs.rows;
                var string = "SCORES: \n";
                for(var f = 0; f<scores.length; f++){
                    string += "Name: "+scores[f].doc.name+" Score:"+scores[f].doc.points+"\n";
                }
                alert(string);
              });
          }
      </script>

      <table border="1" style="color: white; top: 15%; font-size: 70px; left: 38%;">
        <tr><td>ATOMOIDS</td></tr>
      </table>

      <table border="1" style="color: white; top: 65%; left: 39.5%;">
        <tr><td><%= message %></td></tr>
      </table>

      <table border="1" style="color: white; top: 75%; left: 41.5%;">
        <tr><td>APERTE ESPAÃ‡O PARA JOGAR</td></tr>
      </table>

      <table border="1" style="color: white; top: 80%; left: 44.5%;">
        <tr><td><input type="button" value="Mostrar Ranking" onclick="showRanking()"></td></tr>
      </table>

