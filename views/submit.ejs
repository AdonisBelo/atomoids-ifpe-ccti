
<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="utf-8">
        <title>Atomoids_Submit</title>
        <script src="javascripts/pouchdb-6.2.0.min.js"></script>
        <link rel="stylesheet" href="stylesheets/style.css">
    </head>
    <body>

      <script type="text/javascript">
          var db = new PouchDB('atomoids_ranking');//var remoteCouch = 'http://127.0.0.1:5984/atomoids_ranking';

          var score = {
              _id: '<%= date %>',
              points: '<%= points %>',
              name: ''
          }

          function addScoreIntoDB(){
              score.name = window.document.formulario.playerName.value;
              db.put(score, function callback(err, result){
                  if(!err){
                      document.getElementById("form1").submit();
                  }
              });
          }
      </script>

      <table border="1" style="top: 20%; color: white;">
        <tr><td><%= points %></td></tr>
        <tr><td><%= date %></td></tr>
      </table>

      <form action="/added" method="post" name="formulario" id="form1">
        <table border="1">
          <tr><td><input type="text" name="playerName"></td>
          <td><input type="button" value="Submeter" onclick="addScoreIntoDB()"></td></tr>
          </table>
      </form>

      <table border="1" id="rankingButton" style="top: 60%;">
        <tr><td><input type="button" value="Menu" onclick="window.location.replace('/')"></td></tr>
      </table>

    </body>
</html>
